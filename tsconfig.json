{
  "include": ["src", "./declarations.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "jsx": "react-jsx",
    "allowJs": true,
    "target": "ES5",
    "removeComments": true,
    "baseUrl": "src",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
